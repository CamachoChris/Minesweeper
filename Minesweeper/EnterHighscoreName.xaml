<Window x:Class="Minesweeper.EnterHighscoreNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="You did highscore!" Icon="bomb.ico" Height="150" Width="300" Background="Gold" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel>        
        <TextBlock x:Name="highscoreTitle" HorizontalAlignment="Center" Text="Congratulations" FontSize="20" Margin="3" TextWrapping="NoWrap"/>
        <TextBlock x:Name="highscoreText" HorizontalAlignment="Center" Text="You made it into the highscore. Please enter your name." Margin="5" TextWrapping="NoWrap"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Center" Text="" TextWrapping="NoWrap" Margin="5" VerticalAlignment="Top" Width="120" KeyDown="NameBox_KeyDown"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Center" Width="50" Margin="5" Click="SaveButton_Click"/>

    </StackPanel>
</Window>
